<project name="test" default="test">
    <include/>
    <target name="test">
        <delete dir="reportes/junit"/>
        <mkdir dir="reportes/junit"/>
        <junit printsummary="yes" haltonfailure="no">
            <classpath>
                <path refid="opentech.module.production.classpath"/>
                <path refid="opentech.runtime.production.module.classpath"/>
                <path refid="opentech.module.classpath"/>
                <path refid="opentech.runtime.module.classpath"/>
            </classpath>
            <batchtest todir="reportes/junit">
                <formatter type="xml"/>
                <fileset>
                    <include/>
                </fileset>
            </batchtest>
        </junit>
    </target>
</project>